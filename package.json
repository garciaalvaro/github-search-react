{
	"name": "github-search-react",
	"version": "2.1.3",
	"description": "Small app to search GitHub repositories",
	"scripts": {
		"start": "npm run dev",
		"dev": "webpack --mode=development & npm run serve:dev",
		"prebuild": "npm run clean:dist && npm run test:types && npm run test:unit",
		"build": "webpack --mode=production",
		"clean:dist": "rm -rf dist",
		"serve": "pm2 start server.js --name github-search-react",
		"serve:stop": "pm2 stop github-search-react",
		"serve:dev": "pm2-dev start server.js",
		"serve:docker": "pm2-runtime start server.js --name github-search-react",
		"prestart:docker": "npm run webpack:prod",
		"docker": "docker-compose up -d",
		"docker:recreate": "docker-compose down && docker-compose build --no-cache && docker-compose up",
		"docker:start": "npm run build && npm run serve:docker",
		"docker:stop": "docker-compose down",
		"test": "npm run test:types && npm run test:unit && npm run test:lint && npm run test:prettier",
		"test:types": "tsc",
		"test:lint": "eslint \"**/*.{js,ts,tsx}\"",
		"test:prettier": "prettier --check \"**/*.{js,ts,tsx,json,html}\"",
		"prettier": "prettier --write \"**/*.{js,ts,tsx,json,html}\"",
		"test:unit": "jest",
		"test:unit:watch": "jest --watch",
		"predeploy": "npm run build",
		"deploy": "gh-pages -d dist"
	},
	"dependencies": {
		"@babel/core": "^7.13.15",
		"@babel/plugin-transform-runtime": "^7.13.15",
		"@babel/preset-env": "^7.13.15",
		"@babel/preset-react": "^7.13.13",
		"@babel/preset-typescript": "^7.13.0",
		"@babel/register": "^7.13.14",
		"@testing-library/react": "^11.2.6",
		"@types/jest": "^26.0.22",
		"@types/react": "^17.0.3",
		"@types/react-dom": "^17.0.3",
		"@types/react-redux": "^7.1.16",
		"babel-loader": "^8.2.2",
		"core-js": "^3.10.1",
		"css-loader": "^5.2.1",
		"css-minimizer-webpack-plugin": "^2.0.0",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"html-webpack-plugin": "^5.3.1",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^26.6.3",
		"mini-css-extract-plugin": "^1.4.1",
		"pm2": "^4.5.6",
		"postcss-loader": "^5.2.0",
		"postcss-preset-env": "^6.7.0",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-redux": "^7.2.3",
		"redux": "^4.0.5",
		"redux-devtools-extension": "^2.13.9",
		"stylus": "^0.54.8",
		"stylus-loader": "^5.0.0",
		"typescript": "^4.2.4",
		"webpack": "^5.31.2",
		"webpack-cli": "^4.6.0"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^4.21.0",
		"@typescript-eslint/parser": "^4.21.0",
		"eslint": "^7.24.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-prettier": "^3.3.1",
		"eslint-plugin-react": "^7.23.2",
		"gh-pages": "^3.1.0",
		"prettier": "^2.2.1"
	},
	"main": "server.js",
	"author": "Alvaro Garcia",
	"license": "MIT",
	"private": true
}
