{
	"name": "github-search-react",
	"version": "1.3.0",
	"description": "Small app to search GitHub repositories",
	"scripts": {
		"start": "npm run dev",
		"dev": "npm run webpack:dev & npm run server:dev",
		"prod": "npm run webpack:prod && npm run server:prod",
		"prod:stop": "npm run server:prod:stop",
		"webpack:dev": "webpack --mode development --watch",
		"webpack:prod": "webpack --mode production",
		"server:dev": "pm2-dev start server.js",
		"server:prod": "pm2 start server.js --name 'github-search-react'",
		"server:prod:stop": "pm2 stop github-search-react",
		"server:docker": "pm2-runtime start server.js --name 'github-search-react'",
		"prestart:docker": "npm run webpack:prod",
		"start:docker": "npm run server:docker",
		"docker": "docker-compose up -d",
		"docker:stop": "docker-compose down",
		"test": "tsc && jest",
		"type-check": "tsc",
		"jest": "jest --watch"
	},
	"dependencies": {
		"express": "^4.17.1",
		"pm2": "^4.5.0",
		"react": "^16.14.0",
		"react-dom": "^16.14.0",
		"react-redux": "^7.2.2",
		"redux": "^4.0.5"
	},
	"devDependencies": {
		"@babel/core": "^7.12.7",
		"@babel/plugin-transform-runtime": "^7.12.1",
		"@babel/preset-env": "^7.12.7",
		"@babel/preset-react": "^7.12.7",
		"@babel/preset-typescript": "^7.12.7",
		"@babel/register": "^7.12.1",
		"@types/enzyme": "^3.10.8",
		"@types/jest": "^26.0.15",
		"@types/react": "^17.0.0",
		"@types/react-dom": "^17.0.0",
		"@types/react-redux": "^7.1.11",
		"@typescript-eslint/eslint-plugin": "^4.8.1",
		"@typescript-eslint/parser": "^4.8.1",
		"babel-loader": "^8.2.1",
		"css-loader": "^5.0.1",
		"css-minimizer-webpack-plugin": "^1.1.5",
		"enzyme": "^3.11.0",
		"enzyme-adapter-react-16": "^1.15.5",
		"eslint": "^7.14.0",
		"eslint-config-prettier": "^6.15.0",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-react": "^7.21.5",
		"html-webpack-plugin": "^4.5.0",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^26.6.3",
		"jest-environment-enzyme": "^7.1.2",
		"jest-enzyme": "^7.1.2",
		"mini-css-extract-plugin": "^1.3.1",
		"postcss-loader": "^4.1.0",
		"postcss-preset-env": "^6.7.0",
		"prettier": "^2.2.0",
		"redux-devtools-extension": "^2.13.8",
		"stylus": "^0.54.8",
		"stylus-loader": "^4.3.0",
		"typescript": "^4.1.2",
		"webpack": "^5.6.0",
		"webpack-cli": "^4.2.0"
	},
	"main": "server.js",
	"author": "Alvaro Garcia",
	"license": "MIT"
}
